# Environment Variables Template
# Copy this file to backend/.env and fill in your values

# REQUIRED: Database Connection
DATABASE_URL=postgresql://user:password@host:port/database

# REQUIRED: Security Settings
# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=your-256-bit-secret-key-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# REQUIRED: Environment
ENVIRONMENT=development  # or 'production'

# CORS Origins (JSON array format)
# For local development:
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:5174"]
# For production (update with your actual domain):
# BACKEND_CORS_ORIGINS=["https://your-app-name.onrender.com"]

# Database settings
DATABASE_ECHO=false

# Server Port
PORT=8000

# Optional: OpenAI API Key (if using embeddings feature)
# OPENAI_API_KEY=your-openai-api-key

# SECURITY WARNING:
# Never commit the actual .env file to version control!
# This .env.example file should only contain template values.